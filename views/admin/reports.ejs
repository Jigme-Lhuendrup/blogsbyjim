<!-- Reports Overview -->
<div class="grid grid-cols-1 gap-6">
    <!-- User Activity Report -->
    <div class="bg-white rounded-lg shadow-sm">
        <div class="p-4 border-b border-gray-200">
            <h2 class="text-lg font-medium text-gray-900">User Activity Report</h2>
        </div>
        <div class="p-4">
            <div class="flex flex-col space-y-4">
                <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                    <div>
                        <h3 class="text-sm font-medium text-gray-900">New Users This Month</h3>
                        <p class="text-2xl font-bold text-gray-900 mt-1"><%= stats.newUsersThisMonth || 0 %></p>
                    </div>
                    <div class="bg-blue-100 p-3 rounded-full">
                        <i class="fas fa-user-plus text-blue-600"></i>
                    </div>
                </div>

                <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                    <div>
                        <h3 class="text-sm font-medium text-gray-900">New Posts This Month</h3>
                        <p class="text-2xl font-bold text-gray-900 mt-1"><%= stats.newPostsThisMonth || 0 %></p>
                    </div>
                    <div class="bg-green-100 p-3 rounded-full">
                        <i class="fas fa-file-alt text-green-600"></i>
                    </div>
                </div>

                <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                    <div>
                        <h3 class="text-sm font-medium text-gray-900">Active Users Today</h3>
                        <p class="text-2xl font-bold text-gray-900 mt-1"><%= stats.activeUsersToday || 0 %></p>
                    </div>
                    <div class="bg-purple-100 p-3 rounded-full">
                        <i class="fas fa-users text-purple-600"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- User Feedbacks -->
    <div class="bg-white rounded-lg shadow-sm mt-6">
        <div class="p-4 border-b border-gray-200">
            <h2 class="text-lg font-medium text-gray-900">User Feedbacks</h2>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Comment</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% if (typeof contacts !== 'undefined' && contacts.length > 0) { %>
                        <% contacts.forEach(contact => { %>
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= contact.email %></td>
                                <td class="px-6 py-4 text-sm text-gray-500"><%= contact.comment %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= new Date(contact.created_at).toLocaleDateString() %></td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="3" class="px-6 py-4 text-center text-sm text-gray-500">No feedbacks yet.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>